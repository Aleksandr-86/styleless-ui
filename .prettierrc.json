{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "all",
  "plugins": [
    "prettier-plugin-organize-attributes",
    "prettier-plugin-tailwindcss",
    "prettier-plugin-css-order"
  ],
  "attributeGroups": [
    "^:?is$",
    "^v-for$",
    "^v-(if|else-if|else)$",
    "^v-show$",
    "^v-cloak",
    "^v-pre",
    "^v-once",
    "^:?id$",
    "^:?ref$",
    "^:?key$",
    "^v-bind$",
    "^v-model",
    "^class$",
    "^:class$",
    "$DEFAULT",
    "^aria-",
    "^@",
    "^v-html$",
    "^v-text$"
  ],
  "attributeSort": "ASC"
}
